doctype html
html
    head
        //metadata
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        meta(name='description', content='NCI Store')
        meta(name='author', content='National College of Ireland. All rights reserved')
        //title
        title= title + ' | NCI Store'
        //stylesheet
        link(rel='stylesheet', href='/css/bootstrap.min.css')
        link(rel='stylesheet', href='/css/font-awesome.min.css')
        link(rel='stylesheet', href='/css/main.css')
        link(rel='stylesheet', href='/css/responsive.css')
        //favicon
        link(rel='shortcut icon', href='/img/ico/favicon.ico')
        link(rel='apple-touch-icon-precomposed', sizes='144x144', href='/img/ico/apple-touch-icon-144-precomposed.png')
        link(rel='apple-touch-icon-precomposed', sizes='114x114', href='/img/ico/apple-touch-icon-114-precomposed.png')
        link(rel='apple-touch-icon-precomposed', sizes='72x72', href='/img/ico/apple-touch-icon-72-precomposed.png')
        link(rel='apple-touch-icon-precomposed', href='/img/ico/apple-touch-icon-57-precomposed.png')
    body
        //header
        header#header
            //header_top
            .header_top
                .container
                    .row
                        .col-sm-6
                            .contactinfo
                                ul.nav.nav-pills
                                    li
                                        a(href='#')
                                            i.fa.fa-phone
                                            |  0123456789
                                    li
                                        a(href='mailto:mail@nci-store.herokuapp.com')
                                            i.fa.fa-envelope
                                            |  mail@nci-store.herokuapp.com
                        .col-sm-6
                            .shop-menu.pull-right
                                ul.nav.navbar-nav
                                    -var orderCus = 'Account'
                                    -var link = '/sign-in'
                                    if customer
                                        -orderCus=customer.FullName
                                        -link='/usr/'
                                    li
                                        a(href=link)
                                            i.fa.fa-user
                                            =orderCus
                                    li
                                        a(href='/cart')
                                            i.fa.fa-shopping-cart
                                            |  Cart
                                
                                    if customer
                                        li
                                            a(href='/sign-out')
                                                i.fa.fa-sign-out
                                                |  Logout
            ///header_top

            //header-middle
            .header-middle
                .container
                    .row
                        .col-sm-4
                            .logo.pull-left
                                a(href='/')
                                    img(src='/img/logo/nci_logo.png', alt='NCI Logo')
                                    //h1
                                        span a
                                        | Store
                                        i.fa.fa-shopping-cart
                        .col-sm-8

            ///header-middle

            //header-bottom
            .header-bottom
                .container
                    .row
                        .col-sm-12
                            .navbar-header
                                button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                                    span.sr-only Toggle navigation
                                    span.icon-bar
                                    span.icon-bar
                                    span.icon-bar
                            .mainmenu.pull-left
                                ul.nav.navbar-nav.collapse.navbar-collapse
                                    li
                                        a(class={active: currentUrl === '/'}, href='/')
                                            | Home
                                    li
                                        a(class={active: currentUrl === '/cat/all'}, href='/cat/all')
                                            | Products
                                    li
                                        a(class={active: currentUrl === '/contact-us'}, href='/contact-us') Contact Us
            ///header-bottom
        ///header

        block content

        //Footer
        footer#footer
            .footer-widget
                .container
                    .row
                        .col-sm-2
                            .companyinfo
                                h2
                                    span NCI
                                    |  Store
                                p
                                    | Get your official NCI merch
                                    | and stand out from the crowd.
                                    | Proud NCI-ian!!!
                        .col-sm-6
                            .single-widget
                                h2 Media
                                ul.nav.nav-pills.nav-stacked
                                    li
                                        a(href='https://www.facebook.com/')
                                            i.fa.fa-facebook
                                            | Facebook
                                    li
                                        a(href='#')
                                            i.fa.fa-twitter
                                            | Twitter
                                    li
                                        a(href='#')
                                            i.fa.fa-instagram
                                            | Instagram
                                    li
                                        a(href='#')
                                            i.fa.fa-youtube
                                            | Youtube
                        .col-sm-3.col-sm-offset-1
                            .single-widget
                                h2 NewsLetter
                                form.searchform
                                    input(type='text', id="inp-subscribe", name='email', placeholder='Your email address')
                                    button.btn.btn-default.btn-subscribe(type='button')
                                        i.fa.fa-arrow-circle-o-right
                                    p
                                        | Get the most recent updates, exclusive deals
                                        | you wont find anywhere else straight to your
                                        | inbox and be updated your self...
            .footer-bottom
                .container
                    .row
                        p.pull-left &copy 2022 NCI Store. All rights reserved.
                        p.pull-right= 'Designed by '
                            span
                                a(target='_blank', href='www.ncirl.ie') Group-8 | SPW Project
        ///Footer
        script(src='/js/jquery-2.1.4.min.js')
        script(src='/js/bootstrap.min.js')
        script(src='/js/jquery.scrollUp.min.js')
        script(src='/js/main.js')
